<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_patient_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.b2d.b2d_project.PatientRegister">

    <TextView
        android:text="Phone Number:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPhoneNumber"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_toStartOf="@+id/etRegisterAddress"
        android:layout_alignTop="@+id/etPhoneNumber"
        android:layout_alignEnd="@+id/swEdit" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etRegisterName"
        android:hint="Enter Name"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvRegisterSurname" />

    <TextView
        android:text="Gender:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvGender"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvPassword"
        android:layout_below="@+id/tvPassword" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spGender"
        android:elevation="24dp"
        android:layout_below="@+id/tvPassword"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvGender" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etRegisterAge"
        android:hint="Enter Age"
        android:layout_below="@+id/spGender"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvAge" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etRegisterCountry"
        android:hint="Enter Country"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvCountry"
        android:layout_below="@+id/etRegisterAge" />

    <Switch
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swEdit"
        android:checked="true"
        android:textColorLink="@android:color/holo_blue_dark"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@+id/tvPhoneNumber"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/etPhoneNumber"
        android:hint="Enter Phone Number"
        android:layout_below="@+id/tvAddress"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/tvAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etUsername"
        android:hint="Choose a username"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/etPassword"
        android:layout_below="@+id/etSurname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etSurname"
        android:hint="Enter Surname"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvRegisterSurname"
        android:layout_below="@+id/etRegisterName" />

    <TextView
        android:text="Surname:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegisterSurname"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/etSurname"
        android:layout_alignBottom="@+id/etSurname"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRegisterName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/etRegisterName"
        android:layout_alignBottom="@+id/etRegisterName"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/etRegisterName" />

    <TextView
        android:text="Username:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsername"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/etUsername"
        android:layout_alignBottom="@+id/etUsername"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tvPassword"
        android:layout_below="@+id/etUsername"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/etPassword" />

    <TextView
        android:text="Password:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etPassword"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_alignBaseline="@+id/tvPassword"
        android:layout_alignBottom="@+id/tvPassword"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Age:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAge"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/etRegisterAge"
        android:layout_alignBottom="@+id/etRegisterAge"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCountry"
        android:text="Country:"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/etRegisterCountry"
        android:layout_alignBottom="@+id/etRegisterCountry"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="City:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etRegisterCity"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/tvCity"
        android:layout_alignBottom="@+id/tvCity"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/etRegisterAge" />

    <TextView
        android:text="Address:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAddress"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_alignBaseline="@+id/etRegisterAddress"
        android:layout_alignBottom="@+id/etRegisterAddress"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/tvCity"
        android:hint="Enter City"
        android:layout_below="@+id/etRegisterCountry"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/etRegisterCity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textCapWords|textPersonName"
        android:ems="10"
        android:id="@+id/etRegisterAddress"
        android:hint="Enter Address"
        android:layout_below="@+id/tvCity"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/etSurname" />

</RelativeLayout>
